# Backend Environment Variables for Railway

# Database
DATABASE_URL=postgresql://postgres:password@postgres.railway.internal:5432/railway
DATABASE_PUBLIC_URL=postgresql://postgres:password@shortline.proxy.rlwy.net:31347/railway

# JWT
JWT_SECRET=your-very-long-random-string-here
JWT_REFRESH_SECRET=another-very-long-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=https://studio-production.up.railway.app
FRONTEND_STAGING_URL=https://studio-staging.up.railway.app

# Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Railway Configuration
NODE_ENV=production
PORT=3001

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@studio.app

# AWS S3 (optional for backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BACKUP_BUCKET=studio-backups

# Redis (optional for caching)
REDIS_URL=redis://default:password@redis.railway.internal:6379

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
