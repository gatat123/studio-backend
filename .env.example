# Database (Railway PostgreSQL Public URL for local development)
DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/railway?schema=public

# JWT
JWT_SECRET=development-secret-key-change-in-production
JWT_REFRESH_SECRET=development-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@storyboard.com

# Frontend
FRONTEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
PORT=3001

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760